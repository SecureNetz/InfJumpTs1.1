-- EMOTE MENU
local Emotes = {
    {"Wave",507766388},
    {"Floss",505757002},
    {"Dance",522635514},
    {"Crab",522635821},
}

for i,e in ipairs(Emotes) do
    local B = Instance.new("TextButton", Main)
    B.Size = UDim2.new(0,100,0,36)
    B.Position = UDim2.new(0,20+(i-1)*110,0,320)
    B.Text = e[1]
    B.Font = Enum.Font.Gotham
    B.TextScaled = true
    B.BackgroundColor3 = Color3.fromRGB(60,60,70)
    B.TextColor3 = Color3.new(1,1,1)
    Instance.new("UICorner", B).CornerRadius = UDim.new(0,8)

    B.MouseButton1Click:Connect(function()
        Input.Text = tostring(e[2])
    end)
end

-- ANIMATION CORE
local current

local function getAnimator()
    local c = player.Character
    if not c then return end
    local h = c:FindFirstChildOfClass("Humanoid")
    if not h then return end
    local a = h:FindFirstChildOfClass("Animator") or Instance.new("Animator", h)
    return a
end

local function play(id)
    local animator = getAnimator()
    if not animator then return end

    if current then
        current:Stop()
        current:Destroy()
    end

    local anim = Instance.new("Animation")
    anim.AnimationId = "rbxassetid://"..id

    current = animator:LoadAnimation(anim)
    current:Play()
    current:AdjustSpeed(tonumber(Speed.Text) or 1)

    Status.Text = "‚ñ∂ Playing "..id
end

Load.MouseButton1Click:Connect(function()
    local id = Input.Text:match("%d+")
    if id then play(id) end
end)

Stop.MouseButton1Click:Connect(function()
    if current then
        current:Stop()
        current:Destroy()
        current = nil
        Status.Text = "‚èπ Stopped"
    end
end)

Speed.FocusLost:Connect(function()
    if current then
        current:AdjustSpeed(tonumber(Speed.Text) or 1)
        SpeedLabel.Text = "Speed: "..Speed.Text
    end
end)

Close.MouseButton1Click:Connect(function()
    if current then current:Stop() end
    ScreenGui:Destroy()
end)

UserInputService.InputBegan:Connect(function(i)
    if i.KeyCode == Enum.KeyCode.F1 then
        Main.Visible = not Main.Visible
    end
end)

print("DELTA ANIMATION HUB LOADED")
